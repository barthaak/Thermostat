<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background5"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nl.tue.demothermostat.WeekActivity"
    android:gravity="center"
    >

    <TextView
        android:id="@+id/text15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From Time: "
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/clocktemp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="15dp"
        android:layout_alignBaseline="@+id/text15"
        android:layout_alignBottom="@+id/text15"
        android:layout_alignStart="@+id/spinnerTemp5" />

    <ImageButton
        android:id="@+id/time_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/clocktemp5"
        android:layout_alignRight="@+id/spinnerTemp5"
        android:background="@drawable/border_edit"
        />

    <TextView
        android:id="@+id/text25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Temperature: "
        android:textSize="15dp"
        android:layout_below="@+id/text15"
        android:layout_alignStart="@+id/text15"
        android:layout_marginTop="7dp"
        />

    <Spinner
        android:id="@+id/spinnerTemp5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_spinner_temp"
        android:layout_marginStart="8dp"
        android:layout_alignTop="@+id/text25"
        android:layout_toEndOf="@+id/text25"
        android:layout_alignBottom="@+id/text25" />

    <CheckBox
        android:id="@+id/chk5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/spinnerTemp5"
        android:layout_alignTop="@+id/clocktemp5"
        android:layout_alignBottom="@+id/spinnerTemp5"
        android:layout_marginLeft="25dp"
        />

</RelativeLayout>