<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/backgroundWCButtonsDay"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="nl.tue.demothermostat.ThermostatActivity"
    android:gravity="center"
    >


    <Button
        android:id="@+id/button2day"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="-0.1"
        android:layout_marginLeft="20dp"
        android:onClick="onColderClickedDay"
        android:background="@drawable/colder"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"

        />

    <Button
        android:id="@+id/buttonday"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="+0.1"
        android:layout_marginRight="20dp"
        android:background="@drawable/warmer"
        android:onClick="onWarmerClickedDay"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>